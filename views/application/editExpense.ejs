<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/navbar.css">
    <script src="/js/navbar.js" defer></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Expense</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/navbar") %>
    <div class="container mt-5">
        <h2 class="mb-4">Edit Expense</h2>

        <form id="editExpenseForm">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="description" name="description"
                    placeholder="Enter expense description" value="<%= expense.description %>" required>
                <label for="description">Description</label>
            </div>

            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="price" name="price" placeholder="Enter price"
                    value="<%= expense.price %>" required>
                <label for="price">Price</label>
            </div>

            <div class="mb-3">
                <label class="form-label">Select Users</label>
                <div class="border p-3 rounded">
                    <% users.forEach((user, index) => { %>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="userId<%= index %>" 
                                value="<%= user.email %>" id="user_<%= user._id %>"
                                <% if (expense.userIds.some(e => e._id.toString() === user._id.toString())) { %> checked <% } %> >
                            <label class="form-check-label" for="user_<%= user._id %>">
                                <%= user.fname %> (<%= user.email %>)
                            </label>
                        </div>
                    <% }) %>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update Expense</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let form = document.getElementById("editExpenseForm");

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            let formdata = new FormData(form);
            let formObject = {};
            
            formdata.forEach((value, key) => {
                formObject[key] = value;
            });

            let response = await fetch("/application/edit-expense/<%= expense._id %>", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(formObject),
            });

            let result = await response.json();
            if (result.success == true) {
                alert(result.message);
                window.location.href = "/application/dashboard";
            }
        });
    </script>
</body>

</html>
